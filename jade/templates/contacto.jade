        #map
          iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3288.1101377435734!2d-58.55387558432968!3d-34.500091980486296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb078e1a14a13%3A0x8cb69eef576e8bc0!2sCreerHacer!5e0!3m2!1ses-419!2sar!4v1480983893058', width='450', height='350', frameborder='0', allowfullscreen='')
          div.u-white info@creerhacer.com.ar
          div.u-white  Coronel Bogado 571 - Boulogne, San Isidro
        // Enlaces a redes sociales
        #contacto-redes.contacto-item.u-m-t-5
          a#twitter.u-margin-5em(href='https://twitter.com/CreerHacer', target='_blank')
            img(src='images/twitter_circle_color-256-3.png')
          a#facebook.u-margin-5em(href='https://www.facebook.com/CreerHacer/', target='_blank')
            img(src='images/facebook-circle.png')
          a#youtube.u-margin-5em(href='https://www.youtube.com/channel/UCd_-XOq5iZEQEdT66HaKfEQ', target='_blank')
            img(src='images/youtube_circle_color-512-2.png')
      section.contacto-formulario-container.contacto-item
        // Formulario de contacto
        form.contacto-form(method='post', action='send.php', name='contactform')
          .contacto-form-column
            h2.u-white.contacto-title Contactanos
            label.u-white.contacto-form-label Mail
            br
            input#mail.contacto-form-input(type='mail', name='mail', pattern='^[A-Za-z0-9](([_.-]?[a-zA-Z0-9]+)*)@([A-Za-z0-9]+)(([.-]?[a-zA-Z0-9]+)*).([A-Za-z]{2,})$', required='required')
            br
            label.u-white.contacto-form-label Nombre Completo
            br
            input.u-white#name.contacto-form-input(type='text', name='nombre', required='required')
            br
            label.u-white.u-m-b-5 Soy de una organizaci√≥n
            input.u-white.contacto-form-checkbox(type='checkbox')
            label.u-white.u-m-b-5 Soy una Empresa
            input.u-white.contacto-form-checkbox(type='checkbox')
            label.u-white.u-m-b-5    Otro
            input.u-white.contacto-form-checkbox(type='checkbox')
          // Cuadro de comentarios
          .contacto-form-column.u-m-t-5 
            label.u-white.contacto-form-label Mensaje:
            br
            textarea#comments.contacto-form-input.contact-message.u-m-t-5(rows="4" cols="20" form="contactform", type='text', name='comentario', input='')
            br
            button.u-white.contacto-button#submit.contacto-button(type='submit', value='Enviar') Enviar
        // Span para id de nav
        span#contacto
